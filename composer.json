{
    "name": "square-payments/square-payments",
    "description": "Square Payments for Shopware 6 lets you accept major credit cards and digital wallets securely. Easy setup, PCI compliant, and supports multiple currencies for your online store.",
    "type": "shopware-platform-plugin",
    "version": "1.0.3",
    "license": "MIT",
    "require": {
        "shopware/core": "~6.6.0",
        "shopware/storefront": "~6.6.0",
        "square/square": "^31.0"
    },
    "authors": [
        {
            "name": "Solution25",
            "email": "info@solution25.com",
            "homepage": "https://www.solution25.com"
        }
    ],
    "extra": {
        "shopware-plugin-class": "SquarePayments\\SquarePayments",
        "label": {
            "de-DE": "Square Zahlungen",
            "en-GB": "Square Payments"
        },
        "description": {
            "de-DE": "Square Payments für Shopware 6 ermöglicht sichere Zahlungen mit Kreditkarten und digitalen Wallets. Einfache Einrichtung, PCI-konform und unterstützt mehrere Währungen im Shop.",
            "en-GB": "Square Payments for Shopware 6 lets you accept major credit cards and digital wallets securely. Easy setup, PCI compliant, and supports multiple currencies for your online store."
        },
        "manufacturerLink": {
            "de-DE": "https://www.solution25.com",
            "en-GB": "https://www.solution25.com"
        },
        "supportLink": {
            "de-DE": "https://support.solution25.com",
            "en-GB": "https://support.solution25.com"
        }
    },
    "autoload": {
        "psr-4": {
            "SquarePayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SquarePayments\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "post-install-cmd": [
            "@enable-prepush"
        ],
        "post-update-cmd": [
            "@enable-prepush"
        ],
        "enable-prepush": [
            "cp ./pre-push .git/hooks/pre-push",
            "chmod +x .git/hooks/pre-push"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
